<div>
<%= render "shared/header_links" %>
</div>

<ul>
  <p>Created events</p>
  <% @user.created_events.each do |event| %>
    <li>
        Creator: <%= @user.username %>
        <div>
          Title: <%= event.title %>
        </div>
        <div>
          Details: <%= event.description %>
        </div>
    </li>
  <% end %>
</ul>

<div>
  attended events:
  <ul>
    in the past:
      <% @user.attendances.where("start_date < ? ", Date.current).each do |e| %>
        <li> Title: <%= link_to e.title, e %> </li>
      <% end %>
  </ul>
  <ul>
    in the future:
      <% @user.attendances.where("start_date > ? ", Date.current).each do |e| %>
        <li> Title: <%= link_to e.title, e %> </li>
      <% end %>
  </ul>
</div>

<div>
  pending invitations:
  <ul>
      <% @user.invitations_received.each do |i| %>
        <li>
          Title: <%= link_to Event.find(i.event_id).title, Event.find(i.event_id) %>
          <%= button_to "Accept", event_attendances_url(attendance: {attended_event_id: i.event_id, attendee_id: current_user}) %>
          <%= button_to "Decline"  %>
        </li>
      <% end %>
  </ul>
</div>
